{
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "jest": true
    },

    "extends": [
        "xo/esnext",
        "xo-react",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    
    "plugins": [
        "import"
    ],
    
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        }
    },

    "rules": {
        "capitalized-comments": "off",
        "lines-between-class-members": [
            "error",
            "always",
            {"exceptAfterSingleLine": true}
        ]
    },

    "parser": "babel-eslint"
}